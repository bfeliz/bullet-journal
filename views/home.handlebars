<div class="row center-align buttonRow">
    <button data-target="modal1"
        class="btn waves-effect waves-light cyan lighten-1 newMonthly main-button modal-trigger">New Monthly
        Spread</button>
    <button data-target="modal2"
        class="btn waves-effect waves-light cyan lighten-1 newCollection main-button modal-trigger">New
        Collection</button>
    <button data-target="modal3"
        class="btn waves-effect waves-light cyan lighten-1 newHabit main-button modal-trigger">New
        Habit</button>
</div>

{{!-- index --}}
<div class="row main-row">
    <div class="col s12 m12 l5">
        <h1 class="index">Index</h1>
        <ul class='currentMonthlies'></ul>
    </div>

    <div class="col l2"></div>
    {{!-- todos new--}}
    <div class="col s12 m12 l5">
        <div class="row">
            <div class="col s12">
                <h1 class="tasks">Tasks</h1>
                <div class="input-field col s9">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Add a task</label>
                </div>
                <div class="input-field col s3">
                    <button class="btn waves-effect waves-light btn-small cyan lighten-1 newdaily" type="submit"
                        name="action">Submit
                    </button>
                </div>
            </div>
        </div>
        {{!-- render db --}}
        <div>
            <ol class='currentDailies'></ol>
        </div>
    </div>
</div>

{{!-- new monthly modal --}}
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4 class="month-title">Create a new monthly spread</h4>
        <div class="input-field col s12">
            <select>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select>
            <label>Pick a month</label>
            <button class="btn waves-effect waves-light btn-small cyan lighten-1 newMonthly submitButton"
                name="action">Submit
            </button>
        </div>
    </div>
</div>

{{!-- new collection modal --}}
<div id="modal2" class="modal">
    <div class="modal-content">
        <h4 class="month-title">Create a new collection</h4>
        <div class="input-field col s12">
            <textarea id="textarea-collect" class="materialize-textarea validate"></textarea>
            <label for="textarea-collect">What is the name of your collection?</label>
        </div>
        <h4 class="month-title">Add names for up to four submodules</h4>
        <div class="input-field col s12">
            <textarea id="textarea-collect2" class="materialize-textarea"></textarea>
        </div>
        <div class="input-field col s12">
            <textarea id="textarea-collect3" class="materialize-textarea"></textarea>
        </div>
        <div class="input-field col s12">
            <textarea id="textarea-collect4" class="materialize-textarea"></textarea>
        </div>
        <div class="input-field col s12">
            <textarea id="textarea-collect5" class="materialize-textarea"></textarea>
        </div>
        <button class="btn waves-effect waves-light btn-small cyan lighten-1 newCollection submitButton2" type="submit"
            name="action">Submit
        </button>
    </div>
</div>
</div>

